<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvCityGuide"
        android:layout_width="111dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="City Guide"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_hand_picked_some_great_places_for_you"
        android:textSize="12sp"
        android:layout_below="@+id/tvCityGuide"
        android:layout_alignStart="@+id/tvCityGuide" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvCityGuide"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scrollbars="horizontal"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />
</RelativeLayout>