<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivDish"
        android:layout_width="300dp"
        android:layout_height="170dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvWednesdayDeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday deal"
        android:textColor="#FA8072" />

    <TextView
        android:id="@+id/tvPromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="25% off for a table for two" />

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#90808080"
        android:textSize="12sp"
        tools:text="Dinner 25% off , and only 68USD/each in Solois Coffee" />
</LinearLayout>